{
  "extends": [
    ":onlyNpm",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":semanticCommitsDisabled",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":maintainLockFilesDisabled",
    ":prHourlyLimit4",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "helpers:disableTypesNodeMajor",
    "helpers:oddIsUnstablePackages"
  ],
  "labels": [
    "dependencies"
  ],
  "branchPrefix": "renovate-",
  "rangeStrategy": "replace",
  "masterIssue": true,
  "prBodyNotes": [
    ":information_source: Find our documentation at https://github.com/Financial-Times/next/wiki/Renovate."
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^@financial-times",
        "^ft-next-",
        "^ft-n-",
        "^n-",
        "^next-",
        "^s3o-"
      ],
      "packageNames": [
        "shellpromise",
        "fetchres",
        "isomorphic-fetch"
      ],
      "depTypeList": [
        "dependencies"
      ],
      "rangeStrategy": "auto"
    },
    {
      "packageNames": [
        "@financial-times/n-ui"
      ],
      "rangeStrategy": "replace"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "masterIssueApproval": true
    },
    {
      "packageNames": [
        "@financial-times/n-gage",
        "@financial-times/n-heroku-tools"
      ],
      "masterIssueApproval": false,
      "groupName": "next build tools",
      "groupSlug": "next-build-tools"
    },
    {
      "packagePatterns": [
        "^o-"
      ],
      "masterIssueApproval": true
    },
    {
      "packagePatterns": [
        "^@financial-times/x-"
      ],
      "groupName": "x-dash monorepo",
      "groupSlug": "x-dash"
    }
  ],
  "ignoreDeps": [
    "bower",
    "node"
  ]
}
