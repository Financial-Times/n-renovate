{
  "extends": [
    ":npm",
    ":docker",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":semanticCommitsDisabled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":maintainLockFilesDisabled",
    ":prHourlyLimit4",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "helpers:disableTypesNodeMajor",
    "helpers:oddIsUnstablePackages",
    "schedule:nonOfficeHours",
    ":noUnscheduledUpdates"
  ],
  "timezone": "Europe/London",
  "labels": [
    "dependencies"
  ],
  "node": {
    "supportPolicy": ["lts"]
  },
  "branchPrefix": "renovate-",
  "rangeStrategy": "replace",
  "masterIssue": true,
  "prBodyNotes": [
    ":information_source: Find our documentation at https://github.com/Financial-Times/next/wiki/Renovate."
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^@financial-times",
        "^ft-next-",
        "^ft-n-",
        "^n-",
        "^next-",
        "^s3o-"
      ],
      "packageNames": [
        "shellpromise",
        "fetchres",
        "isomorphic-fetch"
      ],
      "depTypeList": [
        "dependencies"
      ],
      "rangeStrategy": "auto"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "masterIssueApproval": true
    },
    {
      "packageNames": [
        "@financial-times/n-gage",
        "@financial-times/n-heroku-tools"
      ],
      "masterIssueApproval": false,
      "groupName": "next build tools",
      "groupSlug": "next-build-tools"
    },
    {
      "packagePatterns": [
        "^o-"
      ],
      "packageNames": [
        "@financial-times/n-profile-ui",
        "@financial-times/n-live-chat"
      ],
      "masterIssueApproval": true
    },
    {
      "packagePatterns": [
        "^@financial-times/x-"
      ],
      "groupName": "x-dash monorepo",
      "groupSlug": "x-dash"
    },
    {
      "packagePatterns": [
        "^@financial-times/dotcom-"
      ],
      "rangeStrategy": "auto",
      "masterIssueApproval": false,
      "groupName": "page kit monorepo",
      "groupSlug": "page-kit"
    }
  ],
  "ignoreDeps": [
    "bower"
  ]
}
